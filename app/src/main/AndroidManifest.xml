<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.karld.marshmallowenp">
    Allows for reading Files--------------------------------------------------
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- PERMISSIONS -->
    <!-- Location services -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="MarshMallow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Home Screen" />
        <activity
            android:name=".CreatePostActivity"
            android:label="@string/title_activity_create_post"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfileSettingsActivity"
            android:label="Account" />

        <activity
            android:name=".ViewPostActivity"
            android:label="View Post" />

        <activity android:name=".CreateReviewActivity" />
        <activity
            android:name=".ViewAvailableJobsActivity"
            android:label="Available Jobs" />
        <activity android:name=".ViewAvailableJobDetailsActivity" />
        <activity
            android:name=".TermsOfService"
            android:label="Terms Of Service" />
        <activity
            android:name=".LoginActivity"
            android:label="MarshMallow" />
        <activity android:name=".NavButtons" />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" />

        <activity android:name=".ViewActiveJobsWithBidsActivity"></activity>

        <activity android:name=".ViewMyBidsActivity"></activity>

    </application>

</manifest>